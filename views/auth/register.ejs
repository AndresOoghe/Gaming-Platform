<h1 class="page-title">Register</h1>

<form action="/register" method="POST" class="form">
    <%- include('../partials/messages') %>

    <label for="username" class="form-label">Username</label>
    <input autofocus type="text" name="username" id="username" class="form-input-text"
        value="<%= typeof username != 'undefined' ? username : '' %>">

    <label for="email" class="form-label">Email</label>
    <input type="email" name="email" id="email" class="form-input-text"
        value="<%= typeof email != 'undefined' ? email : '' %>">

    <label for="password" class="form-label">Password</label>
    <div class="relative">
        <input type="password" name="password" id="password" class="form-input-text pr-8"
            value="<%= typeof password != 'undefined' ? password : '' %>">
        <i onclick="togglePassword()"
            class="password-toggle fa fa-eye  absolute top-0 right-0 pt-eye-top pr-eye-right"></i>
    </div>
    <input type="submit" value="Register" class="form-button">

</form>