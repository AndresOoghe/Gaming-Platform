<h1>Register</h1>

<%- include('../partials/messages') %>


<form action="/register" method="POST">
    <div>
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" value="<%= typeof name != 'undefined' ? name : '' %>">
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" name="email" id="email" value="<%= typeof email != 'undefined' ? email : '' %>">
    </div>
    <div>
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" value="<%= typeof password != 'undefined' ? password : '' %>">
    </div>
    <div>
        <input type="submit" value="Register">
    </div>
</form>
<a href="/login">Login</a>