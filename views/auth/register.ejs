<h1>Register</h1>

<%- include('../partials/messages') %>


<form action="/register" method="POST">
    <div>
        <label for="userName">User name:</label>
        <input type="text" name="userName" id="userName" value="<%= typeof userName != 'undefined' ? userName : '' %>">
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" name="email" id="email" value="<%= typeof email != 'undefined' ? email : '' %>">
    </div>
    <div>
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" value="<%= typeof password != 'undefined' ? password : '' %>">
    </div>
    <div>
        <input type="submit" value="Register">
    </div>
</form>
<a href="/login">Login</a>