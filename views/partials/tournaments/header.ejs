    <ul>
        <li><a href="/tournaments/<%= tournament._id %>/general">General</a></li>
        <li><a href="/tournaments/<%= tournament._id %>/rules">Rules</a></li>
        <li><a href="/tournaments/<%= tournament._id %>/brackets">Brackets</a></li>
        <li><a href="/tournaments/<%= tournament._id %>/results">Results</a></li>
        <li><a href="/tournaments/<%= tournament._id %>/participants">Participants</a></li>
        <li><a href="/tournaments/<%= tournament._id %>/match">Match</a></li>
    </ul>
</nav>

<% if (typeof user != 'undefined') { %>
<% if (tournament.inscriptions.includes(user._id.toString())) { %>
<form action="/tournaments/<%= tournament._id %>/unregister" method="POST">
    <input class="form-button bg-secondary-light border border-primary text-primary" type="submit" value="Unregister">
</form>
<% } else { %>
<form action="/tournaments/<%= tournament._id %>/register" method="POST">
    <input class="form-button" type="submit" value="Register">
</form>
<% } %>
<% } else { %>
<a href="/login?redirect=tournaments/<%= tournament._id %>" class="form-button">Login</a>
<% } %>